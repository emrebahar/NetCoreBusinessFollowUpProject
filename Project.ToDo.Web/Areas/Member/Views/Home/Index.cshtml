
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3" style="max-width: 20rem;">
            <div class="card-body">
                <h4 class="card-title">Tamamladığınız Görev Sayısı</h4>
                @if (ViewBag.TamamlananGorevSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.TamamlananGorevSayisi</p>
                    <p>
                        <a asp-action="Index" asp-controller="Gorev" class="btn btn-light btn-sm">
                            <i class="fas fa-chevron-circle-right mr-2"></i>
                            İncele
                        </a>
                    </p>
                }
                else
                {
                    <p class="card-text lead">
                        Herhangi bir gorev tamamlamamışsınız.
                    </p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3" style="max-width: 20rem;">
            <div class="card-body">
                <h4 class="card-title">Tamamlanmayan Gorev Sayısı</h4>
                @if (ViewBag.TamamlanmasiGerekenGorevSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.TamamlanmasiGerekenGorevSayisi</p>
                    <p>
                        <a asp-action="Index" asp-controller="IsEmri" class="btn btn-light btn-sm">
                            <i class="fas fa-chevron-circle-right mr-2"></i>
                            İncele
                        </a>
                    </p>
                }
                else
                {
                    <p class="card-text lead">
                        Tamamlanması gereken goreviniz bulunmamaktadır.
                    </p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3" style="max-width: 20rem;">
            <div class="card-body">
                <h4 class="card-title">Okunmayan Bildirim Sayısı</h4>
                @if (ViewBag.OkunmayanBildirimSayisi > 0)
                {
                    <p class="card-text display-4">@ViewBag.OkunmayanBildirimSayisi</p>
                    <p>
                        <a asp-action="Index" asp-controller="Bildirim" class="btn btn-light btn-sm">
                            <i class="fas fa-chevron-circle-right mr-2"></i>
                            İncele
                        </a>
                    </p>
                }
                else
                {
                    <p class="card-text lead">
                        Bildiriminiz bulunmamaktadır.
                    </p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-primary text-center mb-3" style="max-width: 20rem;">
            <div class="card-body">
                <h4 class="card-title">Yazdığınız Rapor Sayısı</h4>
                @if (ViewBag.RaporSayisi > 0)
                {
                    <p class="card-text display-4">
                        @ViewBag.RaporSayisi
                    </p>
                }
                else
                {
                    <p class="card-text lead">
                        Herhangi bir rapor yazmamışsınız.
                    </p>
                }
            </div>
        </div>
    </div>

</div>

