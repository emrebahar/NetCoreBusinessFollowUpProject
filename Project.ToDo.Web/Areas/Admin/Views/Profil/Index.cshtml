@model AppUserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Ad :</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SurName">Soyad :</label>
        <span asp-validation-for="SurName" class="text-danger"></span>
        <input asp-for="SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email :</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h5 class="text-center"> Şuan ki resminiz:</h5>
                    <img src="/img/@Model.Picture" style="height:10rem!important;" class="w-100" alt="@Model.Name" />
                </div>
            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div id="alanOnizleme" style="display:none!important;">
                    <h5 class="text-center">Seçtiğiniz resim:</h5>
                    <img id="resimOnizleme" src="" style="height:10rem!important;" class="w-100" />
                </div>
            </div>
            <div class="col-md-2">

            </div>
            <div class="col-md-12">
                <label>Resim Seç:</label>
                <input type="file" class="form-control-file" name="resim" id="Resim" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-sm">
        <i class="fas fa-check-circle mr-2"></i>
        Kaydet
    </button>
</form>

@section JavaScript{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Resim").change(function (e) {
                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>
}

